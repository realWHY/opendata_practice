<% layout('layout') %>
<body id="page-top" data-spy="scroll" data-target=".navbar-fixed-top"
style="background-color:#FFBB66;">
    <% include ../partials/navSL %>  
    <div class="container">
        <br/>
        <div class="text-center reg_msg">
            <h2 class="fancy"><span></span></h2>
        </div>
        <br><br><br><br>
        
            <div class="text-center reg_msg">
            <h2 class="fancy"><span>SIGN UP</span></h2>
        </div><br>

        <div class="row signup">
            
            <% if(hasErrors) { %>
                <% for(var i=0; i<messages.length; i++){ %>
                    <div class = "alert alert-danger alert-dismissable">
                        <%= messages[i] %>
                    </div>
                <% } %>
            <% } %>
            
            <form method="POST" class="" id="signupForm" action="/signup">


                <div class="form-group input_group">
                    <input id="fullname" class="form-control" name="fullname" type="text" autocomplete="on" placeholder="FULLNAME" style="margin-bottom:20px;" >
                </div>
 

                <div class="form-group input_group">
                    <input id="email" class="form-control" name="email" type="text" autocomplete="on" placeholder="EMAIL" style="margin-bottom:20px;">
                </div>

                <div class="form-group input_group">
                    <input id="password" class="form-control" name="password" type="password" placeholder="PASSWORD" style="margin-bottom:20px;">
                </div>


                <div class="form-group">
                    <input type="submit" id="submit" value="SIGN UP" class="form-control btn btn-primary" name="submit" style="">
                </div>

              </form>

              <div>
                  <h4>Already have an account? <a href="/login">Login</a></h4>
              </div>
        </div>
        <img src="./img/signlog/book-png-18.png" style="float:left; height: 150px;"/>
    </div>
    
    
</body>